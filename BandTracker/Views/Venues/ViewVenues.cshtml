@{
  Layout = "_Layout";
}


@using BandTracker.Models;

<h1>Band Tracker</h1>
<h2>Venue: @Model["selectedVenue"].GetVenueName()</h2>
<hr />
@if (@Model["events"].Count != 0)
{
  <h4>Here are all the Venues:</h4>
  <ul>
    @foreach (var bands in @Model["events"])
    {
      <li>@bands.GetBand() </li>
    }
  </ul>
}
<h4>Add a band to this list:</h4>
<form action='/arrivals/@Model["selectedVenue"].GetId()/bands/new' method='post'>
  <label for='band-id'>Select a band</label>
  <select id='band-id' name='band-id' type='text'>
    @foreach (var band in @Model["allBands"])
    {
      <option value='@band.GetId()'>@band.GetBand()</option>
    }
  </select>
  <button class="btn btn-primary" type='submit'>Add</button>
</form>
<p><a href="/">Return to Main Page</a></p>
